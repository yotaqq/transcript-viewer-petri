{
	"name": "@kaifronsdal/transcript-viewer",
	"private": false,
	"version": "1.0.29",
	"type": "module",
	"description": "A web-based viewer for AI conversation transcripts with rollback support",
	"keywords": [
		"ai",
		"transcript",
		"viewer",
		"svelte",
		"conversation"
	],
	"author": "Kai Fronsdal",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/kaifronsdal/AutoAlignmentAuditor.git",
		"directory": "website/transcript-viewer"
	},
	"bin": {
		"transcript-viewer": "./bin/transcript-viewer.js"
	},
	"files": [
		"build",
		"bin",
		"src",
		"static",
		"package.json",
		"README.md",
		"svelte.config.js",
		"vite.config.ts",
		"tailwind.config.js",
		"tsconfig.json"
	],
	"scripts": {
		"dev": "vite dev",
		"dev:runpod": "vite dev --host 0.0.0.0 --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"start": "vite preview --port 3000",
		"start:runpod": "vite preview --host 0.0.0.0 --port 8080"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@types/markdown-it": "^14.1.2",
		"@types/node": "^24.0.13",
		"@types/stream-json": "^1.7.8",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte-check": "^4.0.0",
		"typescript-eslint": "^8.20.0"
	},
	"dependencies": {
		"@kaifronsdal/svelte-json-viewer": "^0.1.0",
		"@sveltejs/adapter-node": "^5.2.13",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@tanstack/svelte-table": "^9.0.0-alpha.10",
		"@tanstack/svelte-virtual": "^3.13.12",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"chokidar": "^4.0.3",
		"daisyui": "^5.0.43",
		"express": "^4.21.2",
		"fast-json-patch": "^3.1.1",
		"filtrex": "^3.1.0",
		"idb": "^7.1.1",
		"markdown-it": "^14.1.0",
		"highlight.js": "^11.9.0",
		"open": "^10.1.0",
		"svelte": "^5.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"yargs": "^17.7.2"
	}
}
